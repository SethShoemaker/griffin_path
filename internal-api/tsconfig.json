        "target": "es2024",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
        "noEmitOnError": true
    },
    "include": [
        "migrations",
        "knexfile.ts",
        "auth",
        "routers",
        "app.ts",
        "main.ts"
